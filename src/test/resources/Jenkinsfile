pipeline {
    agent any


tools {
    maven 'M2_HOME'
    jdk 'JAVA_HOME'
  }

stages{

        stage('starting Tests.') {
            steps {
                echo "Tests Starting."

            }
        }

        stage('running Tests') {
            steps {
              echo "running Tests.."
             sh 'mvn -f pom.xml clean install'
            }
        }

